    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_margin="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="587dp"
            android:id="@+id/framelayout"
            />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/indicator"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bottom_navigation_bar"
            >
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/image_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/home_page_icon"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_home"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interrogation"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/image_interrogation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/interrogation_icon"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_interrogation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_buyying"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopping"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/image_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shopping_cart_icon"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_shopping"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/user">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/image_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_icon"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_userCenter"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
